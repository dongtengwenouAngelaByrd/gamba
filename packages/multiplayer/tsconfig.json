{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,

    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",

    "lib": ["ES2020", "DOM"],
    "resolveJsonModule": true,
    "types": ["node"],

    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "idl/**/*"],
  "exclude": ["dist", "test"]
}
